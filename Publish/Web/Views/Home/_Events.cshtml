@model Website.Models.HomeModel


@foreach (Website.Models.EventModel m in Model.Events)
{
    <a class="pull-left" href="#"><span class="dateEl"><em>@m.Date.Day</em>@m.Month</span></a>

    <h4 class="media-heading">
        <a href="#">@m.Name</a>
    </h4>
    <div class="meta-data">
        <span class="longDate">@m.Date.ToShortDateString()</span> <span class="timeEl">@m.Date.ToShortTimeString()</span>
    </div>
    <p>
        @m.Description
    </p>

    <!-- Add the UI for rating in the corresponding case -->
    <div>
        <fieldset class="score">
            <legend>Score:</legend>

            <input type="radio" id="score-5" name="score" value="5" />
            <label title="5 stars" for="score-5">5 stars</label>

            <input type="radio" id="score-4" name="score" value="4" />
            <label title="4 stars" for="score-4">4 stars</label>

            <input type="radio" id="score-3" name="score" value="3" />
            <label title="3 stars" for="score-3">3 stars</label>

            <input type="radio" id="score-2" name="score" value="2" />
            <label title="2 stars" for="score-2">2 stars</label>

            <input type="radio" id="score-1" name="score" value="1" />
            <label title="1 stars" for="score-1">1 stars</label>

        </fieldset>

    </div>
    <div>
        <button class="comment-button" data-eventid="@m.EventId">Add Comment</button>
        <button class="view-comments" data-eventid="@m.EventId">View Comments</button>
    </div>
    <div>
        <textarea id="CommentBox-@m.EventId" data-eventid="@m.EventId" style="display:none; margin-left:113px; margin-top:20px; width:400px; height:100px;"></textarea>
        <button class="post-comment-button" id="PostComment-@m.EventId" data-eventid="@m.EventId" style="display:none; margin-left:113px; margin-top:20px;">Post Comment</button>
    </div>
    <br />
    <div id="commentsWrapper-@m.EventId" style="display:none;">
        <h4 style="margin-left:113px; margin-bottom:10px;">Comments</h4>
        <!-- Comments Below -->
        <div id="comments-@m.EventId">

        </div>
        <button style="margin-left:113px; margin-bottom:10px;" class="collapse-comments" data-eventid="@m.EventId">Collapse Comments</button>
    </div>
}
